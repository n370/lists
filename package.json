{
  "name": "lists",
  "version": "2.1.2",
  "private": true,
  "description": "Lists improvements for Twitter that you'd think were already part of Twitter.",
  "main": "src/contentscript.js",
  "scripts": {
    "dev": "rollup -c rollup.config.js --environment NODE_ENV:development",
    "prod": "npm run lint && rollup -c rollup.config.js --environment NODE_ENV:production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomitm/lists.git"
  },
  "keywords": [],
  "author": "tomitm",
  "bugs": {
    "url": "https://github.com/tomitm/lists/issues"
  },
  "homepage": "https://github.com/tomitm/lists#readme",
  "dependencies": {
    "raven-js": "3.3.0"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "1.1.1",
    "eslint": "3.1.1",
    "eslint-config-airbnb-base": "5.0.0",
    "eslint-plugin-import": "1.12.0",
    "rollup": "0.34.1",
    "rollup-plugin-babel": "2.6.1",
    "rollup-plugin-commonjs": "3.3.1",
    "rollup-plugin-node-resolve": "1.7.1",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1"
  },
  "babel": {
    "presets": [
      "es2015-rollup"
    ],
    "env": {
      "production": {
        "comments": false
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": 0,
      "comma-dangle": 0,
      "linebreak-style": 0,
      "consistent-return": 0,
      "import/prefer-default-export": 0,
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false
        }
      ],
      "max-len": [
        "error",
        120
      ]
    },
    "globals": {
      "document": true,
      "chrome": true,
      "fetch": true,
      "MutationObserver": true
    }
  }
}
