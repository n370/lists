{
  "name": "lists",
  "version": "3.0.2",
  "private": true,
  "description": "Quick and easy access to Twitter Lists.",
  "main": "src/contentscript.js",
  "scripts": {
    "dev": "rollup -c rollup.config.js --environment NODE_ENV:development",
    "prod": "npm run lint && rollup -c rollup.config.js --environment NODE_ENV:production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomitm/lists.git"
  },
  "keywords": [],
  "author": "tomitm",
  "bugs": {
    "url": "https://github.com/tomitm/lists/issues"
  },
  "homepage": "https://github.com/tomitm/lists#readme",
  "dependencies": {
    "raven-js": "3.9.1"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "3.0.0",
    "eslint": "3.13.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "rollup": "0.41.1",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "7.0.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-plugin-replace": "1.1.1",
    "rollup-plugin-uglify": "1.0.1"
  },
  "babel": {
    "presets": [
      "es2015-rollup"
    ],
    "env": {
      "production": {
        "comments": false
      }
    }
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "semi": 0,
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false
        }
      ]
    },
    "globals": {
      "document": true,
      "chrome": true,
      "fetch": true,
      "MutationObserver": true
    }
  }
}
